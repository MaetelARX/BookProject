@model IEnumerable<Genre>

<h2 class="text-center my-4">Genres</h2>

<div class="text-center mb-3">
    <a asp-action="AddGenre" asp-controller="Genre" class="btn btn-dark">Add More</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Genre</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.GenreName</td>
                <td class="text-center">
                    <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-sm btn-success mx-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-sm btn-danger mx-1" onclick="return window.confirm('Are you sure?')">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
