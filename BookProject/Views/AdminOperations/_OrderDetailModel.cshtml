@model OrderDetailModelDTO

<div class="modal fade" id="model-@Model.DivId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Order Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>Book</th>
                            <th>Genre</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetail)
                        {
                            <tr>
                                <td>@item.Book.BookName</td>
                                <td>@item.Book.Genre.GenreName</td>
                                <td>@($"{item.UnitPrice:f2}")</td>
                                <td>@item.Quantity</td>
                                <td>@($"{item.Quantity * item.UnitPrice:f2}")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end"><strong>Total Price:</strong></td>
                            <td><strong>@($"{Model.OrderDetail.Sum(x => x.Quantity * x.UnitPrice):f2}")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
